<p class="text-success"><%= notice %></p>

<h1>Devices</h1>

<% if @device.present? %>
<div class="table-responsive">
  <table class="table table-striped">
    <thead class="thead-light">
      <tr>
        <th>Brand</th>
        <th>Model</th>
        <th>Price</th>
        <th>Image</th>
      </tr>
    </thead>
    <tbody>
      <% @device.each do |p| %>
        <tr>
          <td><%= p.brand %></td>
          <td><%= p.model %></td>
          <td><%= p.price %></td>
          <td><%= p.image %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
  <p class="text-center">No Results Found</p>
<% end %>

<%= paginate @device %>
