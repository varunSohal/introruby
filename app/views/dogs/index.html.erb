<p><%= notice %></p>

<h1>Dogs</h1>

<% if @dogs.present? %>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Size</th>
        <th>Origin</th>
        <th>Color</th>
      </tr>
    </thead>
    <tbody>
      <% @dogs.each do |p| %>
        <tr>
          <td><%= p.name %></td>
          <td><%= p.size %></td>
          <td><%= p.origin %></td>
          <td><%= p.color %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
  <p class="text-center">No Results Found</p>
<% end %>

<%= paginate @dogs %>
